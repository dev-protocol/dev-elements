{
	"compilerOptions": {
		"module": "esnext",
		"target": "ES2020",
		"lib": ["esnext", "dom"],
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"plugins": [
			{
				"name": "typescript-lit-html-plugin"
			}
		]
	}
}
