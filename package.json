{
	"name": "@devprotocol/elements",
	"version": "0.0.1",
	"description": " Web Components for Dev Protocol",
	"scripts": {
		"dev": "run-p vite watch",
		"vite": "vite",
		"test": "wtr dist/test.js --node-resolve --puppeteer",
		"build": "yarn build:ts && yarn build:rollup && yarn build:rollup:elements",
		"build:ts": "tsc",
		"build:rollup": "rollup -c",
		"build:rollup:elements": "rollup -c rollup.config.elements.js",
		"watch": "yarn build:rollup:elements -w",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepare": "husky install"
	},
	"author": "Dev Protocol",
	"license": "MPL-2.0",
	"dependencies": {
		"@aggre/ullr": "3.0.2",
		"ethereum-waffle": "3.4.4",
		"ethers": "^5.6.4",
		"lit": "2.2.2",
		"ramda": "0.28.0",
		"rxjs": "7.5.5"
	},
	"devDependencies": {
		"@devprotocol/util-ts": "2.2.1",
		"@esm-bundle/chai": "4.3.4-fix.0",
		"@rollup/plugin-commonjs": "22.0.0",
		"@rollup/plugin-multi-entry": "4.1.0",
		"@rollup/plugin-node-resolve": "13.2.1",
		"@rollup/plugin-typescript": "^8.3.2",
		"@rollup/pluginutils": "^4.2.1",
		"@types/dotenv": "8.2.0",
		"@types/glob": "^7.2.0",
		"@types/node": "17.0.25",
		"@types/ramda": "0.28.11",
		"@typescript-eslint/eslint-plugin": "5.21.0",
		"@typescript-eslint/parser": "5.21.0",
		"@web/test-runner": "0.13.27",
		"@web/test-runner-puppeteer": "0.10.5",
		"autoprefixer": "10.4.5",
		"dotenv": "16.0.0",
		"eslint": "8.14.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-functional": "4.2.1",
		"glob": "^8.0.1",
		"husky": "7.0.4",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.12",
		"prettier": "2.6.2",
		"rimraf": "3.0.2",
		"rollup": "2.70.2",
		"rollup-plugin-dts": "4.2.1",
		"rollup-plugin-lit-tailwindcss": "^2.1.0",
		"tailwindcss": "^3.0.24",
		"type-fest": "^2.12.2",
		"typescript": "4.6.3",
		"typescript-lit-html-plugin": "0.9.0",
		"vite": "2.9.5"
	},
	"repository": "git+https://github.com/dev-protocol/dev-elements.git",
	"bugs": {
		"url": "https://github.com/dev-protocol/dev-elements/issues"
	},
