{
	"name": "@devprotocol/elements",
	"version": "0.0.1",
	"description": " Web Components for Dev Protocol",
	"scripts": {
		"dev": "vite",
		"test": "wtr dist/test.js --node-resolve --puppeteer",
		"build": "yarn build:ts && yarn build:rollup",
		"build:ts": "tsc",
		"build:rollup": "rollup -c",
		"pretest": "yarn build",
		"prebuild": "rimraf dist",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepare": "husky install"
	},
	"author": "Dev Protocol",
	"license": "MPL-2.0",
	"dependencies": {
		"@aggre/ullr": "2.0.1",
		"ethereum-waffle": "3.4.0",
		"lit": "2.2.0",
		"ramda": "0.28.0",
		"rxjs": "7.5.4"
	},
	"devDependencies": {
		"@devprotocol/util-ts": "2.2.1",
		"@esm-bundle/chai": "4.3.4-fix.0",
		"@rollup/plugin-multi-entry": "4.1.0",
		"@rollup/plugin-node-resolve": "13.1.3",
		"@types/dotenv": "8.2.0",
		"@types/node": "16.11.25",
		"@types/ramda": "0.27.64",
		"@typescript-eslint/eslint-plugin": "5.12.0",
		"@typescript-eslint/parser": "5.12.0",
		"@web/test-runner": "0.13.27",
		"@web/test-runner-puppeteer": "0.10.5",
		"dotenv": "16.0.0",
		"eslint": "7.32.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-functional": "3.7.2",
		"husky": "7.0.4",
		"prettier": "2.5.1",
		"rimraf": "3.0.2",
		"rollup": "2.67.3",
		"rollup-plugin-dts": "4.1.0",
		"typescript": "4.5.5",
		"typescript-lit-html-plugin": "0.9.0",
		"vite": "2.8.4"
	},
	"repository": "git+https://github.com/dev-protocol/dev-elements.git",
	"bugs": {
		"url": "https://github.com/dev-protocol/dev-elements/issues"
