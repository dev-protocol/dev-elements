{
	"name": "@devprotocol/elements",
	"version": "0.0.6",
	"description": " Web Components for Dev Protocol",
	"main": "dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist/*.mjs",
		"dist/*.js",
		"dist/*.ts",
		"bundled",
		"!**/*.test.*",
		"!**/test.*"
	],
	"scripts": {
		"dev": "run-p vite watch",
		"vite": "vite",
		"test": "wtr --puppeteer",
		"build": "npm run build:ts && npm run build:rollup && npm run build:rollup:elements",
		"build:ts": "tsc",
		"build:rollup": "rollup -c",
		"build:rollup:elements": "rollup -c rollup.config.elements.js",
		"watch": "npm run build:rollup:elements -w",
		"prebuild": "rimraf dist bundled",
		"lint": "npm run lint:eslint && npm run lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepack": "npm run test && npm run build",
		"prepare": "husky install"
	},
	"author": "Dev Protocol",
	"license": "MPL-2.0",
	"dependencies": {
		"@aggre/ullr": "^3.1.3",
		"ethers": "5.6.9",
		"lit": "2.2.7",
		"ramda": "0.28.0",
		"rxjs": "7.5.6"
	},
	"devDependencies": {
		"@devprotocol/util-ts": "2.2.1",
		"@esm-bundle/chai": "4.3.4-fix.0",
		"@rollup/plugin-commonjs": "22.0.1",
		"@rollup/plugin-multi-entry": "4.1.0",
		"@rollup/plugin-node-resolve": "13.3.0",
		"@rollup/plugin-typescript": "8.3.3",
		"@rollup/pluginutils": "^4.2.1",
		"@types/dotenv": "8.2.0",
		"@types/glob": "^7.2.0",
		"@types/node": "17.0.25",
		"@types/ramda": "0.28.15",
		"@typescript-eslint/eslint-plugin": "5.30.7",
		"@typescript-eslint/parser": "5.30.7",
		"@web/dev-server-esbuild": "0.3.1",
		"@web/test-runner": "0.13.31",
		"@web/test-runner-puppeteer": "0.10.5",
		"autoprefixer": "10.4.7",
		"bundled-ethers": "https://github.com/dev-protocol/bundled-ethers.git",
		"dotenv": "16.0.1",
		"eslint": "8.20.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-functional": "4.2.1",
		"glob": "8.0.3",
		"husky": "8.0.1",
		"npm-run-all": "^4.1.5",
		"postcss": "8.4.14",
		"prettier": "2.7.1",
		"rimraf": "3.0.2",
		"rollup": "2.77.0",
		"rollup-plugin-dts": "4.2.2",
		"tailwindcss": "3.1.6",
		"type-fest": "2.17.0",
		"typescript": "4.7.4",
		"typescript-lit-html-plugin": "0.9.0",
		"vite": "3.0.2"
	},
	"repository": "git+https://github.com/dev-protocol/dev-elements.git",
	"bugs": {
		"url": "https://github.com/dev-protocol/dev-elements/issues"
	},
	"homepage": "https://github.com/dev-protocol/dev-elements#readme"
}
