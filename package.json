{
	"name": "@devprotocol/elements",
	"version": "0.2.2",
	"description": " Web Components for Dev Protocol",
	"main": "dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist/*.mjs",
		"dist/*.js",
		"dist/*.ts",
		"bundled",
		"!**/*.test.*",
		"!**/test.*"
	],
	"scripts": {
		"dev": "run-p vite watch",
		"vite": "vite",
		"test": "wtr --puppeteer",
		"build": "npm run build:ts && npm run build:rollup && npm run build:rollup:elements",
		"build:ts": "tsc",
		"build:rollup": "rollup -c",
		"build:rollup:elements": "rollup -c rollup.config.elements.js",
		"watch": "npm run build:rollup:elements -w",
		"prebuild": "rimraf dist bundled",
		"lint": "npm run lint:eslint && npm run lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"prepack": "npm run test && npm run build",
		"prepare": "husky install"
	},
	"author": "Dev Protocol",
	"license": "MIT",
	"devDependencies": {
		"@aggre/ullr": "3.1.3",
		"@devprotocol/util-ts": "3.0.0",
		"@esm-bundle/chai": "4.3.4-fix.0",
		"@rollup/plugin-commonjs": "25.0.0",
		"@rollup/plugin-multi-entry": "6.0.0",
		"@rollup/plugin-node-resolve": "15.0.2",
		"@rollup/plugin-typescript": "11.1.1",
		"@rollup/pluginutils": "5.0.2",
		"@types/dotenv": "8.2.0",
		"@types/glob": "8.1.0",
		"@types/node": "18.16.13",
		"@types/ramda": "0.29.1",
		"@typescript-eslint/eslint-plugin": "5.59.6",
		"@typescript-eslint/parser": "5.59.6",
		"@web/dev-server-esbuild": "0.4.1",
		"@web/test-runner": "0.16.1",
		"@web/test-runner-puppeteer": "0.13.1",
		"autoprefixer": "10.4.14",
		"bundled-ethers": "https://github.com/dev-protocol/bundled-ethers.git",
		"dotenv": "16.0.3",
		"eslint": "8.40.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-functional": "4.4.1",
		"ethers": "^5.7.2",
		"glob": "10.2.5",
		"husky": "8.0.3",
		"lit": "2.7.4",
		"npm-run-all": "4.1.5",
		"postcss": "8.4.23",
		"prettier": "2.8.8",
		"ramda": "0.29.0",
		"rimraf": "5.0.1",
		"rollup": "2.79.1",
		"rollup-plugin-dts": "4.2.3",
		"rxjs": "7.8.1",
		"tailwindcss": "3.3.2",
		"type-fest": "3.10.0",
		"typescript": "4.9.5",
		"typescript-lit-html-plugin": "0.9.0",
		"vite": "4.3.8"
	},
	"repository": "git+https://github.com/dev-protocol/dev-elements.git",
	"bugs": {
		"url": "https://github.com/dev-protocol/dev-elements/issues"
	},
	"homepage": "https://github.com/dev-protocol/dev-elements#readme"
}
